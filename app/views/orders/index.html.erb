<div class='container'>
  <div class='row justify-content-center'>
    <h1>Заказы</h1>
  </div>
  <div class='row'>
    <% @orders.each do |order| %>
      <div class="card">
        <h5 class="card-header"><%= "Заказ №#{order.id}" %></h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= "Количество товаров: #{order.items.size}" %></li>
          <li class="list-group-item"><%= "Количество позиций: #{order.items.sum(&:count)}" %></li>
        </ul>
        <%= link_to 'Начать сборку', order, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
